---
interface Props {
    type?: string;
}

const { type } = Astro.props;

let badgeColor = ""
switch (type) {
    case "success":
        badgeColor = "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300"
        break;
    case "warning":
        badgeColor = "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300"
        break;
    case "error":
        badgeColor = "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300"
        break;
    case "info":
        badgeColor = "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300"
        break;
    case "indigo":
        badgeColor = "bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-300"
        break;
    case "purple":
        badgeColor = "bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300"
        break;
    case "pink":
        badgeColor = "bg-pink-100 text-pink-800 dark:bg-pink-900 dark:text-pink-300"
        break;
    default:
        badgeColor = "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
        break;
}
---

<span class:list={['badge', badgeColor]}>
    <slot />
</span>

<style>
.badge {
    @apply font-mono inline-flex items-center text-xs font-medium me-2 px-2.5 py-0.5 rounded;
}
</style>