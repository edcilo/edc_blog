---
import { Icon } from 'astro-icon/components';

type Tag = {
    label: string;
    icon: string;
    type: string;
};

interface Props {
    image: string;
    url: string;
    name: string;
    description: string;
    tags: Tag[];
}

const { image, url, name, description, tags } = Astro.props;
---

<div class="portfolio-card">
    <a href={url} target="_blank">
        <img class="cover" src={image} width="378" height="280" alt={`${name} cover`} />
    </a>
    <div class="container">
        <a href={url} target="_blank">
            <h1 class="title">{name}</h1>
        </a>
        <p class="description">{description}</p>
        <footer>
            {tags.map(tag => (
                <Icon name={tag.icon} title={tag.label} />
            ))}
        </footer>
    </div>
</div>

<style>
.portfolio-card {
    @apply max-w-sm bg-white border rounded-lg mb-4;
    @apply dark:bg-zinc-950 dark:border-zinc-700;

    footer {
        @apply flex justify-end;

        svg {
            @apply mr-2;

            &:last-child {
                @apply mr-0;
            }
        }
    }

    .container {
        @apply p-4;
    }

    .cover {
        @apply rounded-t-lg w-full w-full h-auto;
    }

    .title {
        @apply font-mono mb-3 text-xl font-semibold tracking-tight text-gray-900;
        @apply dark:!text-slate-100;
    }

    .description {
        @apply mb-3 font-normal text-gray-700 line-clamp-3 leading-relaxed;
        @apply dark:!text-slate-500;
    }
}
</style>