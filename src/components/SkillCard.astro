---
import { Icon } from 'astro-icon/components';

type Tech = {
    name: string;
    icon: string;
    libraries?: {
        name: string;
        icon: string;
    }[]
}

interface Props {
    title: string;
    techs: Tech[];
}

const { title, techs } = Astro.props;
---

<div class="skill-card">
    <h2>{title}</h2>

    <div class="container">
        {techs.map(tech => (
            <div class="tech">
                <div>
                    <Icon title={tech.name} name={tech.icon} />
                </div>
                <div class="libraries">
                    {tech.libraries?.map(library => {
                        return (
                            <div class="library">
                                <Icon title={library.name} name={library.icon} />
                            </div>
                        )
                    })}
                </div>
            </div>
        ))}
    </div>
</div>

<style>
.skill-card {
    @apply p-4;

    h2 {
        font-family: var(--font-mono);
        @apply text-center font-semibold;
    }

    .container {
        @apply flex justify-center gap-3 p-4;
    }

    .tech {
        @apply flex flex-col items-center mb-3;

        svg {
            @apply size-12 mb-1;
        }

        .libraries {
            @apply flex gap-1;

            .library {
                svg {
                    @apply size-4;
                }
            }
        }
    }
}
</style>