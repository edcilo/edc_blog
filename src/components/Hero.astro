---
import { Icon } from 'astro-icon/components';
import Badge from "./Badge.astro";
import ELogo from "./ELogo.astro";

const me = {
    name: "Eduardo Cifuentes López",
    title: "Fullstack Developer",
    location: "Ciudad de México",
    description: "Apasionado por aprender y experimentar.",
    expierence: 12,
}

---

<section id="home" class="hero">
    <div class="container">
        <div class="e">
            <ELogo />
        </div>

        <div class="jumbotron">
            <span class="badge">
                <Badge type="success">{me.title}</Badge>
            </span>
            <h1>{me.name}</h1>
            <p class="location">
                <Icon name="pin-map" />
                {me.location}
            </p>
            <p class="resume">{me.description}</p>
            <ul class="skills">
                <li>
                    <span>{me.expierence}</span> <br />
                    <div>
                        Años de exp.
                    </div>
                </li>
                <li>
                    <span>+20</span> <br /> proyectos
                </li>
            </ul>
        </div>

        <div class="cucu">
            <img src="/assets/cat.svg" width="550" height="550" alt="cucu cat" />
        </div>

        <Icon class="scroll-icon" name="scroll" />
    </div>
</section>

<style>
.hero {;
    @apply overflow-hidden flex justify-center min-h-[520px];

    .container {
        @apply relative flex items-center justify-center md:justify-between;
        @apply py-8 px-4 max-w-screen-xl;

        .jumbotron {
            @apply relative z-0 w-2/3 text-center;
            @apply md:w-1/2 md:text-left;

            h1 {
                @apply font-mono mt-3 mb-1 text-2xl font-medium tracking-tight leading-none text-gray-900;
                @apply md:text-3xl lg:text-4xl;
                @apply dark:!text-slate-100;

                animation: backInLeft .8s 1 ease;
            }

            .badge {
                @apply block;
                animation: backInLeft .5s 1 ease;
            }

            .location {
                @apply w-full flex gap-1 items-center justify-center;
                @apply mb-3 text-sm text-zinc-500;
                @apply dark:text-zinc-400;
                @apply md:justify-start;

                animation: backInLeft 1.1s 1 ease;
            }

            .resume {
                @apply mb-8 text-lg font-normal text-gray-500 text-pretty;
                @apply lg:text-xl;
                @apply dark:!text-gray-400;

                animation: backInLeft 1.4s 1 ease;
            }

            .skills {
                @apply flex justify-center gap-8 mb-4;
                @apply uppercase text-xs text-gray-400 text-left;
                @apply md:justify-start;
                @apply dark:!text-zinc-600;

                li {
                    @apply text-center;

                    animation: fadeIn 1.7s ease;
                }

                span {
                    @apply mr-2 text-4xl;
                }
            }
        }

        .cucu {
            @apply z-0 hidden;
            @apply md:block;
        }

        .e {
            @apply absolute z-0;
            @apply w-[900px] top-[-150px] left-[-100px];
            @apply md:w-[1000px] md:top-[-100px] left-[-240px];
        }

        .scroll-icon {
            @apply absolute bottom-1 left-1/2 -translate-x-1/2;
            @apply size-8 text-zinc-400/50;
            @apply dark:!text-slate-700/50;

            animation: bounce 1.4s infinite;
        }
    }
}

@keyframes backInLeft {
    0% {
        transform: translateX(-2000px) scale(0.9);
        opacity: 0.7;
    }

    80% {
        transform: translateX(0px) scale(0.9);
        opacity: 0.7;
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }
    40% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

@keyframes bounce {
    0%, 100% {
        transform: translateY(-10%);
        animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
    }
    50% {
        transform: translateY(0);
        animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
    }
}
</style>