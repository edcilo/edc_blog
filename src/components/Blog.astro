---
import ArticleCard from "./ArticleCard.astro";
const allPosts = await Astro.glob('../pages/posts/*.md');
const recentPosts = allPosts.slice(0, 4);
---

<div id="blog" class="blog">
    <h1>Blog</h1>

    <div class="container">
        <div class="grid">
            {recentPosts.map(post => (
                <ArticleCard
                    url={post.url || '/'}
                    title={post.frontmatter.title}
                    description={post.frontmatter.resume}
                    image={post.frontmatter.image} />
            ))}
        </div>
    </div>
</div>


<style>
    .blog {
        @apply relative flex flex-col items-center py-16 border-b;
        @apply dark:border-zinc-700;

        h1 {
            @apply font-mono my-9 text-4xl font-medium text-center;
            @apply dark:!text-slate-100;
        }

        .container {
            @apply max-w-screen-md px-4 flex justify-center;
        }

        .grid {
            @apply grid-cols-1 content-center gap-4;
            @apply md:grid-cols-2;
        }
    }
</style>